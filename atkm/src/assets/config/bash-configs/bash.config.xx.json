{
  "id": "binance-debug",
  "title": "Binance API Debug Terminal",
  "subtitle": "Test and debug Binance API endpoints with real-time data display",
  "defaultEndpoint": "account",
  "terminal": {
    "editable": true,
    "height": "450px",
    "showControls": true,
    "customCommands": [
      {
        "name": "clear",
        "description": "Clear terminal logs",
        "handler": "clearLogs"
      },
      {
        "name": "status",
        "description": "Show connection status",
        "handler": "showStatus"
      },
      {
        "name": "symbol",
        "description": "Set trading symbol for queries",
        "handler": "setSymbol"
      }
    ]
  },
  "table": {
    "showEmptyState": true,
    "itemsPerPage": 100,
    "searchEnabled": false
  },
  "endpoints": [
    {
      "id": "account",
      "name": "Account Information",
      "url": "http://localhost:8000/api/v3/account",
      "method": "GET",
      "headers": {
        "Content-Type": "application/json",
        "X-Debug": "true"
      },
      "cacheable": true,
      "cacheDuration": 30000,
      "dataTransformer": "transformAccountData",
      "columns": [
        {
          "key": "asset",
          "label": "Asset",
          "width": "20%",
          "align": "left",
          "type": "text",
          "sortable": true,
          "cssClass": "asset-cell"
        },
        {
          "key": "free",
          "label": "Available",
          "width": "25%",
          "align": "right",
          "type": "custom",
          "sortable": true
        },
        {
          "key": "locked",
          "label": "Locked",
          "width": "25%",
          "align": "right",
          "type": "custom",
          "sortable": true,
          "cssClass": "locked-balance"
        },
        {
          "key": "total",
          "label": "Total",
          "width": "25%",
          "align": "right",
          "type": "custom",
          "sortable": true,
          "cssClass": "total-cell"
        },
        {
          "key": "usdValue",
          "label": "USD Value",
          "width": "5%",
          "align": "right",
          "type": "currency",
          "sortable": true,
          "visible": false
        }
      ]
    },
    {
      "id": "trades",
      "name": "Trade History",
      "url": "http://localhost:8000/api/v3/myTrades",
      "method": "GET",
      "params": {
        "symbol": "BTCUSDT",
        "limit": 100
      },
      "cacheable": true,
      "cacheDuration": 60000,
      "dataTransformer": "transformTradeData",
      "columns": [
        {
          "key": "symbol",
          "label": "Symbol",
          "width": "12%",
          "align": "left",
          "type": "badge",
          "sortable": true
        },
        {
          "key": "side",
          "label": "Side",
          "width": "8%",
          "align": "center",
          "type": "badge",
          "cssClass": "trade-side"
        },
        {
          "key": "price",
          "label": "Price",
          "width": "18%",
          "align": "right",
          "type": "custom",
          "sortable": true
        },
        {
          "key": "qty",
          "label": "Quantity",
          "width": "18%",
          "align": "right",
          "type": "custom",
          "sortable": true
        },
        {
          "key": "quoteQty",
          "label": "Quote Qty",
          "width": "18%",
          "align": "right",
          "type": "custom",
          "sortable": true
        },
        {
          "key": "commission",
          "label": "Fee",
          "width": "10%",
          "align": "right",
          "type": "custom"
        },
        {
          "key": "time",
          "label": "Date",
          "width": "16%",
          "align": "center",
          "type": "date",
          "sortable": true
        }
      ]
    },
    {
      "id": "orders",
      "name": "Order History",
      "url": "http://localhost:8000/api/v3/allOrders",
      "method": "GET",
      "params": {
        "symbol": "BTCUSDT",
        "limit": 100
      },
      "cacheable": true,
      "cacheDuration": 45000,
      "dataTransformer": "transformOrderData",
      "columns": [
        {
          "key": "symbol",
          "label": "Symbol",
          "width": "12%",
          "align": "left",
          "type": "text",
          "sortable": true
        },
        {
          "key": "side",
          "label": "Side",
          "width": "8%",
          "align": "center",
          "type": "badge",
          "cssClass": "order-side"
        },
        {
          "key": "type",
          "label": "Type",
          "width": "10%",
          "align": "center",
          "type": "text"
        },
        {
          "key": "origQty",
          "label": "Quantity",
          "width": "15%",
          "align": "right",
          "type": "custom"
        },
        {
          "key": "executedQty",
          "label": "Executed",
          "width": "15%",
          "align": "right",
          "type": "custom"
        },
        {
          "key": "price",
          "label": "Price",
          "width": "15%",
          "align": "right",
          "type": "custom"
        },
        {
          "key": "status",
          "label": "Status",
          "width": "10%",
          "align": "center",
          "type": "badge",
          "cssClass": "order-status"
        },
        {
          "key": "time",
          "label": "Created",
          "width": "15%",
          "align": "center",
          "type": "date",
          "sortable": true
        }
      ]
    },
    {
      "id": "ticker",
      "name": "Ticker Prices",
      "url": "http://localhost:8000/api/v3/ticker/price",
      "method": "GET",
      "cacheable": true,
      "cacheDuration": 10000,
      "dataTransformer": "transformTickerData",
      "columns": [
        {
          "key": "symbol",
          "label": "Symbol",
          "width": "40%",
          "align": "left",
          "type": "text",
          "sortable": true
        },
        {
          "key": "price",
          "label": "Price",
          "width": "30%",
          "align": "right",
          "type": "custom",
          "sortable": true
        },
        {
          "key": "priceChangePercent",
          "label": "24h Change %",
          "width": "30%",
          "align": "right",
          "type": "percentage",
          "sortable": true,
          "cssClass": "price-change-cell"
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "refresh-all",
      "label": "Refresh All",
      "icon": "refresh-cw",
      "variant": "primary",
      "handler": "refreshData"
    },
    {
      "id": "export-csv",
      "label": "Export CSV",
      "icon": "download",
      "variant": "secondary",
      "handler": "exportData"
    },
    {
      "id": "test-connection",
      "label": "Test Connection",
      "icon": "wifi",
      "variant": "success",
      "handler": "testConnection"
    },
    {
      "id": "clear-cache",
      "label": "Clear Cache",
      "icon": "trash-2",
      "variant": "warning",
      "handler": "clearCache"
    }
  ]
}
